<root>
	<styles>
		<include src="file://{resources}/styles/steamstyles.css" />
		<include src="file://{resources}/styles/settings.css" />
	</styles>

	<SettingsPanel_Account class="SettingsSection" defaultfocus="SettingsAccount_History">
		<!-- top header panel -->
		<Panel class="SettingsHeader">
			<Label class="SettingsHeaderLegend" text="#Settings_Account" />
		</Panel>
		
		<Panel class="SettingsBottomPanel">
			<!-- main panel -->
			<Panel class="SettingsContent SettingsLeftContent" tabindex="auto" selectionpos="auto">
				<Button id="SettingsAccount_History" onactivate="BrowseToSteamURL( StoreAccount )" class="Button">
					<Label class="LongDesc" text="#SettingsAccount_History" />
				</Button>
				<Button class="Button" id="SettingsAccount_ChangePassword" onactivate="AccountSettingsChangePassword();">
					<Label class="LongDesc" text="#SettingsAccount_ChangePassword" />
				</Button>
				<Button class="Button" id="SettingsAccount_ChangeEmail" onactivate="AccountSettingsChangeEmail();">
					<Label class="LongDesc" text="#SettingsAccount_ChangeEmail" />
				</Button>
				<Button class="Button" id="SettingsAccount_VerifyEmail" onactivate="AccountSettingsVerifyEmail();">
					<Label class="LongDesc" text="#SettingsAccount_Verify" />
				</Button>
				<Button class="Button" id="SettingsAccount_ManageSteamGuard" onactivate="AccountSettingsManageSteamGuard();">
					<Label class="LongDesc" text="#SettingsAccount_ManageSteamGuard" />
				</Button>
				<ToggleButton class="CheckBox" id="SettingsAccount_SavePW" text="#SettingsAccount_SaveCredentials" onactivate="AccountSettingsToggleSavePW()"/>

			</Panel>
	
			<!-- right-hand status/info panel -->
			<Panel class="SettingsContent SettingsRightContent">
				<Label class="SettingsLegend" text="#SettingsAccount_AccountName" />
				<Label class="SettingsValue" text="#SettingsAccount_AccountNameText"/>
	
				<Label class="SettingsLegend" text="#SettingsAccount_VacStatus" />
				<Label id="SettingsAccount_VAC" class="SettingsValue" text="#VAC_NoBans"/>
	
				<Label class="SettingsLegend" text="#SettingsAccount_ContactEmail" />
				<Label class="SettingsValue" text="#SettingsAccount_ContactEmailText" />
	
				<Label class="SettingsLegend" text="#SettingsAccount_EmailStatus" />
				<Label class="SettingsValue" id="SettingsAccount_EmailStatus" />
	
				<Label class="SettingsLegend" text="#SettingsAccount_SteamGuardStatus" />
				<Label class="SettingsValue" id="SettingsAccount_SteamGuardStatus" />
			</Panel>
		</Panel>
	
	</SettingsPanel_Account>

</root>
